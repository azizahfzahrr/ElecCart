<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_image_payment"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_product_payment"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/airpodsmax" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_name_product_payment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_bold"
        android:maxLines="2"
        android:text="Apple Airpods Max"
        android:textColor="@color/black_200"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/cv_image_payment"
        app:layout_constraintTop_toTopOf="@id/cv_image_payment" />

    <TextView
        android:id="@+id/tv_price_product_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="$199,99"
        android:textColor="@color/black_200"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_name_product_payment"
        app:layout_constraintTop_toBottomOf="@id/tv_name_product_payment" />

    <TextView
        android:id="@+id/tv_quantity_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quantity"
        android:fontFamily="@font/poppins"
        android:textSize="12sp"
        android:textColor="@color/grey_300"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toEndOf="@id/tv_price_product_payment"
        app:layout_constraintTop_toTopOf="@id/tv_price_product_payment"
        app:layout_constraintBottom_toBottomOf="@id/tv_price_product_payment"/>

    <TextView
        android:id="@+id/tv_amount_qty_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/poppins"
        android:text="1"
        android:textColor="@color/grey_300"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_quantity_payment"
        app:layout_constraintStart_toEndOf="@id/tv_quantity_payment"
        app:layout_constraintTop_toTopOf="@id/tv_quantity_payment" />


    <View
        android:id="@+id/divider_product_payment"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@+id/cv_image_payment" />

</androidx.constraintlayout.widget.ConstraintLayout>