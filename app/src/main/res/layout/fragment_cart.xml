<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".CartFragment">

    <TextView
        android:id="@+id/tv_your_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Cart"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/black_200"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider_cart"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E0E0E0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_your_cart" />

    <TextView
        android:id="@+id/tv_delivery_address_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery to"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black_200"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider_cart"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_address_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Kebayoran, Jakarta Selatan"
        android:textColor="@color/black_300"
        android:textSize="12sp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toTopOf="@id/tv_delivery_address_cart"
        app:layout_constraintBottom_toBottomOf="@id/tv_delivery_address_cart"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_arrow_down_address"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/arrow_down"
        app:layout_constraintBottom_toBottomOf="@id/tv_address_cart"
        app:layout_constraintStart_toEndOf="@id/tv_address_cart"
        app:layout_constraintTop_toTopOf="@id/tv_address_cart" />

    <View
        android:id="@+id/divider_cart_2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E0E0E0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_delivery_address_cart" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_product_cart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/divider_cart_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:itemCount="3"
        tools:listitem="@layout/item_cart_product" />

    <TextView
        android:id="@+id/tv_order_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Summary"
        android:fontFamily="@font/poppins_bold"
        android:textSize="14sp"
        android:textColor="@color/black_200"
        android:layout_marginBottom="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_total_product_cart" />

    <TextView
        android:id="@+id/tv_total_product_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textSize="12sp"
        android:textColor="@color/black_200"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_order_summary"
        app:layout_constraintStart_toStartOf="@id/tv_order_summary" />

    <TextView
        android:id="@+id/tv_total_price_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$199,99"
        android:textSize="12sp"
        android:textColor="@color/black_200"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_total_product_cart"
        app:layout_constraintBottom_toBottomOf="@id/tv_total_product_cart" />

    <ImageView
        android:id="@+id/iv_arrow_up_product_cart"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/arrow_up"
        app:layout_constraintTop_toTopOf="@id/tv_order_summary"
        app:layout_constraintEnd_toEndOf="@id/tv_total_price_cart"/>

    <TextView
        android:id="@+id/tv_total_items_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Items"
        android:fontFamily="@font/poppins"
        android:textSize="12sp"
        android:textColor="@color/black_200"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_total_product_cart"
        app:layout_constraintStart_toStartOf="@+id/tv_total_product_cart" />

    <TextView
        android:id="@+id/tv_fill_total_items_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 items"
        android:textSize="12sp"
        android:textColor="@color/black_200"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_total_items_cart"
        app:layout_constraintBottom_toBottomOf="@id/tv_total_items_cart" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_payment_now"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Payment Now"
        android:backgroundTint="@color/color_secondary"
        app:cornerRadius="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_total_items_cart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>